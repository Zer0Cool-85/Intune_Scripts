<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Modern WPF Window" 
    Height="500" Width="700" 
    WindowStartupLocation="CenterScreen"
    FontFamily="Segoe UI"
    AllowsTransparency="True"
    WindowStyle="None"
    Background="Transparent">

    <Window.Resources>
        <!-- Modern Button -->
        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2C5E99"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox -->
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <!-- Main Border for Rounded Window -->
    <Border CornerRadius="12" Background="#FDFDFD" Padding="0" SnapsToDevicePixels="True" >
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            <!-- Background Gradient -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FAFAFA" Offset="0"/>
                    <GradientStop Color="#EAEAEA" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/> <!-- Title Bar -->
                <RowDefinition Height="*"/>  <!-- Main Content -->
                <RowDefinition Height="50"/> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <DockPanel Grid.Row="0" Background="#FFFFFF" LastChildFill="True">
                <TextBlock Text="Windows 11 Style Form" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14"/>
                <Button Content="✕" Width="35" Height="35" Background="Transparent" BorderThickness="0" Foreground="#666"
                        HorizontalAlignment="Right" Click="Close_Click" Cursor="Hand"/>
            </DockPanel>

            <!-- Main Content -->
            <StackPanel Grid.Row="1" Margin="20" Orientation="Vertical" Spacing="10">
                <TextBlock Text="Enter Details:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Width="250" PlaceholderText="Type something..."/>
                <Button Content="Submit" Style="{StaticResource ModernButton}" Width="120"/>
                <DataGrid Height="200" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Footer -->
            <DockPanel Grid.Row="2" Background="#F8F8F8" Height="50" VerticalAlignment="Center" Padding="10,0">
                <TextBlock Text="© 2025 Your Company" VerticalAlignment="Center" Foreground="#777"/>
            </DockPanel>

        </Grid>
    </Border>
</Window>
