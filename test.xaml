<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC Information 2.1"
        Height="600" Width="400"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Background="Transparent"
        AllowsTransparency="True">

    <!-- Drop shadow outer border -->
    <Border CornerRadius="12" Background="White" Padding="0" SnapsToDevicePixels="True">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.25"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/> <!-- Header -->
                <RowDefinition Height="*"/>  <!-- Main content -->
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" CornerRadius="12,12,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#4A90E2" Offset="0"/>
                        <GradientStop Color="#357ABD" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <DockPanel LastChildFill="True">
                    <!-- Icon -->
                    <Image Source="pack://application:,,,/Resources/pc_icon.png"
                           Width="24" Height="24" Margin="12,0,6,0" VerticalAlignment="Center"/>
                    <!-- Title -->
                    <TextBlock Text="PC Information" FontSize="16" FontWeight="Bold"
                               Foreground="White" VerticalAlignment="Center"/>
                    <!-- Close button -->
                    <Button Content="âœ•" Width="32" Height="32" Margin="0,0,8,0"
                            HorizontalAlignment="Right" VerticalAlignment="Center"
                            Click="Button_Exit_Click"
                            Background="Transparent" Foreground="White"
                            BorderThickness="0" FontSize="14"
                            Cursor="Hand"/>
                </DockPanel>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Row="1" Padding="12">
                <StackPanel>
                    <!-- Section 1: System Info -->
                    <TextBlock Text="System Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                    <Separator/>
                    <Grid Margin="0,4,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>

                        <Label Content="Computer Name:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="PCName" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Operating System:" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="OS" Grid.Row="1" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="OS Architecture:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="OSArch" Grid.Row="2" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="OS Version:" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="OSVersion" Grid.Row="3" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="OS Build:" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="OSBuild" Grid.Row="4" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Last Reboot:" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="LastReboot" Grid.Row="5" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Make:" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="Make" Grid.Row="6" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Model:" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="ModelName" Grid.Row="7" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Serial #:" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="Serial" Grid.Row="8" Grid.Column="1" IsReadOnly="True"/>

                        <Label Content="Physical Memory:" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="Memory" Grid.Row="9" Grid.Column="1" IsReadOnly="True"/>
                    </Grid>

                    <!-- Section 2: Storage -->
                    <TextBlock Text="Storage Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                    <Separator/>
                    <Grid Margin="0,4,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="C: Drive Free Space:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="FreeSpace" Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>
                    </Grid>

                    <!-- Section 3: Network -->
                    <TextBlock Text="Network Information" FontWeight="Bold" FontSize="14" Margin="0,0,0,4"/>
                    <Separator/>
                    <Grid Margin="0,4,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="Button_IPConfig" Content="IP Address:" Style="{StaticResource Link}" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox x:Name="IPAddress" Grid.Column="1" IsReadOnly="True"/>
                    </Grid>

                    <Label Content="Network Adapter(s):" FontWeight="Bold" Margin="0,8,0,4"/>
                    <DataGrid x:Name="MACAddress" Width="350" MaxColumnWidth="220" BorderThickness="0" CornerRadius="4"/>

                    <!-- Buttons Row -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Spacing="10">
                        <Button x:Name="Button_PrinterConfig" Content="Printer Cfg" Width="90" Height="35" Style="{StaticResource ModernButton}"/>
                        <Button x:Name="Button_Copy" Content="Copy" Width="90" Height="35" Style="{StaticResource ModernButton}"/>
                        <Button x:Name="Button_Refresh" Content="Refresh" Width="90" Height="35" Style="{StaticResource ModernButton}"/>
                        <Button x:Name="Button_Exit" Content="Exit" Width="90" Height="35" Style="{StaticResource ModernButton}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
